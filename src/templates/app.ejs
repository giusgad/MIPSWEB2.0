<div class="header flex justify-between align-center">
    <div class="flex align-center">
        <!--<div class="icon app-logo app-color"><%-//Icons.render('microchip')%></div>-->
        <div class="app-name">MIPSWEB</div>
    </div>
    <div id="header-buttons"><%-await renderTemplate('/app/header-buttons.ejs', ctx)%></div>
</div>

<div class="toolbar flex justify-between align-center">
    <div id="files-buttons"><%-await renderTemplate('/app/files-buttons.ejs', ctx)%></div>
    <% if (ctx.openedFiles.length > 0) { %>
    <div id="vm-buttons"><%-await renderTemplate('/app/vm-buttons.ejs', ctx)%></div>
    <%}%>
</div>

<% if ((ctx.files.length > 0) && ctx.interfaceState === 'edit') { %>
<div id="sidebar" <%if(ctx.sidebar){%>class="sidebar-open"<%}%>><%-await renderTemplate('/app/sidebar.ejs', ctx)%></div>
<%if (ctx.sidebar === 'all-files') {%><div id="sidebar-content"><%-await renderTemplate('/app/sidebar-contents/all-files.ejs', ctx)%></div><%}%>
<%}%>

<% if (ctx.openedFiles.length > 0) { %>
    <div id="opened-files" class="<% if (ctx.interfaceState === 'execute') { %>execute<% } else if (ctx.sidebar) { %>sidebar-open<% } %>"><%- await renderTemplate('/app/opened-files.ejs', ctx) %></div>
    <div id="registers" <%if(ctx.interfaceState === 'execute'){%>class="execute"<%}%>><%-await renderTemplate('/app/registers.ejs', ctx)%></div>
    <% if (ctx.interfaceState === 'execute') { %>
    <div id="memory" <%if(ctx.memoryMapActive){%>class="map-active"<%}%>><%-await renderTemplate('/app/memory.ejs', ctx)%></div>
    <div id="console"><%-await renderTemplate('/app/console.ejs', ctx)%></div>
    <%if(ctx.memoryMapActive){%><div id="memorymap" class="map-active"><%-await renderTemplate('/app/memorymap.ejs', ctx)%></div><%}%>
    <% } %>
<%}%>
