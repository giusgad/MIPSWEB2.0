
<div class="buttons">
    <% if (ctx.interfaceState === "execute") { %>
        <%if ((ctx.vm.nextInstructionEditorPosition !== undefined) && (ctx.editorState === "execute") && (!ctx.vm.cpu.isHalted())) {%>
            <div class="button default" onclick="stepOnClick();">
                <div class="icon gray-4"><%-Icons.render('step')%></div>
                <div class="label">Step</div>
            </div>
            <div class="button default" onclick="runOnClick();">
                <div class="icon gray-4"><%-Icons.render('run')%></div>
                <div class="label">Run</div>
            </div>
        <%}%>
        <div class="button default" onclick="stopOnClick();">
            <div class="icon gray-4"><%-Icons.render('stop')%></div>
            <div class="label">Stop</div>
        </div>
    <% } %>
    <div class="button default" onclick="assembleOnClick()">
        <div class="icon gray-4"><%-Icons.render('assemble')%></div>
        <div class="label">Assemble</div>
    </div>
</div>
