<div class="buttons">
    <% if (ctx.interfaceState === "execute") { %>
        <%if ((ctx.vm.nextInstructionEditorPosition !== undefined) && (ctx.editorState === "execute") && (!ctx.vm.cpu.isHalted())) {%>
            <div class="button default" onclick="stepOnClick();">
                <div class="icon gray-4"><%-Icons.render('step')%></div>
                <div class="label">Step</div>
            </div>
            <div class="button-group">
              <div class="button default" onclick="runOnClick();">
                  <div class="icon gray-4"><%-ctx.vm.running ? Icons.render('pause') : Icons.render('run')%></div>
                  <div class="label"><%=ctx.vm.running ? "Pause" : "Run" %></div>
              </div>
              <div class="button default" onclick="showFormOnClick('execution-speed')">
                  <div class="icon gray-4"><%-Icons.render('dots')%></div>
              </div>
            </div>
        <%}%>
        <div class="button default" onclick="stopOnClick();">
            <div class="icon gray-4"><%-Icons.render('stop')%></div>
            <div class="label">Stop</div>
        </div>
    <% } %>
    <div class="button default" onclick="assembleOnClick()">
        <div class="icon gray-4"><%-ctx.interfaceState==="execute" ? Icons.render('rewind') : Icons.render('assemble')%></div>
        <div class="label"><%=ctx.interfaceState==="execute" ? "Reset" : "Assemble"%></div>
    </div>
</div>
