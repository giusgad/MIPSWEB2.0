<div id="no-files">
  <div class="buttons">
    <div class="button default" onclick="newFileOnClick()" title="Create a new source file inside the editor">
        <div class="icon gray-4"><%-Icons.render('newFile')%></div>
        <div class="label">New file</div>
    </div>
    <div class="button default" onclick="importFilesOnClick()" title="Add the imported files to the current project">
        <div class="icon gray-4"><%-Icons.render('importFiles')%></div>
        <div class="label">Import files</div>
    </div>
    <div class="button default" onclick="importZipOnClick()" title="Open a new project replacing the current one">
        <div class="icon gray-4"><%-Icons.render('importProject')%></div>
        <div class="label">Import project zip</div>
    </div>
  </div>
</div>
